{
  "manifest_version": 2,
  "name": "Election Header",
  "version": "1.0",
  "description": "Dynamically displays moving images of presidential candidates across the screen.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "my_images.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "web_accessible_resources": [
    "image1.jpg",
    "image2.jpg",
    "image3.jpg"
  ]
}
