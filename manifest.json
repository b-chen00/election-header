{
  "manifest_version": 2,
  "name": "Election Header",
  "version": "1.0",
  "description": "Dynamically displays moving images of presidential candidates across the screen.",
  "icons": {
    "48": "images/AmericanFlag.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "my_images.html",
    "default_icon": {
      "48": "images/AmericanFlag.png"
    }
  },
  "web_accessible_resources": [
    "images/biden.jpg",
    "images/binkley.jpg",
    "images/haley.jpg",
    "images/kennedy.jpg",
    "images/phillips.jpg",
    "images/stein.jpg",
    "images/trump.jpg",
    "images/west.jpg",
    "images/AmericanFlag.png"
  ]
}
